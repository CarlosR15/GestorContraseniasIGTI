doctype html 
html 
  head
    title Contrase単as
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/css/styles.css')
  body
    nav
      ul
           
        a(href='/logout') 
          button Cerrar Sesion
           
        a(href='/addCont') 
          button Agregar Contrase単a
  
    form(action='/search', method='GET' class='search-bar')
      input(type='text', name='q', placeholder='Buscar contrase単as')
      button(type='submit') Buscar
    if sitios.length > 0
      each sitio in sitios
        .contenedor-gal
          h3 #{sitio.name}
          h3 #{sitio.url}
          - const contraseniasSitio = contrasenias.filter(cont => cont.sitio_id === sitio.id)
          each cont in contraseniasSitio
            .contenedor-cont-info
              p Usuario: #{cont.usuario}
              p Contrase単a: #{cont.contrasenia}

      else
        p No se encontraron resultados.