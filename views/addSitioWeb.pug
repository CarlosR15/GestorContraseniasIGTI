        button(type='submit') Guardar Sitio Web

    script.
        function validarURL() { 
          var urlEnInput = document.getElementById("url");
          var url = urlEnInput.value;
          var patronEnUrl = /^https?:\/\/[\w\-]+(\.[\w\-]+)+[/#?]?.*$/;
          if (!patronEnUrl.test(url)) {
            alert("Ingrese una URL valida.");
            urlEnInput.focus();
            return false;
          }
          return true;
        }